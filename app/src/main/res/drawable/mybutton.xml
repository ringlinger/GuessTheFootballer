<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="3dip" android:color="#FFFFFF" />
            <gradient android:angle="-90" android:startColor="#5E35B1" android:endColor="#311B92"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="3dip" android:color="#FFFFFF" />
            <solid android:color="#5E35B1"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="3dip" android:color="#FFFFFF" />
            <gradient android:angle="-90" android:startColor="#7E57C2" android:endColor="#311B92" />
        </shape>
    </item>
</selector>