<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1A237E">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="340dp"
            android:layout_height="349dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp"
            android:background="#1565C0"
            android:src="@drawable/rectangle" />

        <TextView
            android:id="@+id/timeControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="140dp"
            android:fontFamily="monospace"
            android:text="2:00"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="140dp"
            android:fontFamily="monospace"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="italic" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_footballer"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_above="@+id/button1"
            android:layout_centerHorizontal="true"
            app:civ_border_color="#1565C0"
            app:civ_border_width="10dp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="240dp"
            android:background="@drawable/mybutton"
            android:onClick="celebChosen"
            android:padding="10dp"
            android:tag="0"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/button2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="180dp"
            android:background="@drawable/mybutton"
            android:onClick="celebChosen"
            android:padding="10dp"
            android:tag="1"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/button3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="121dp"
            android:background="@drawable/mybutton"
            android:onClick="celebChosen"
            android:padding="10dp"
            android:tag="2"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/button4"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="64dp"
            android:background="@drawable/mybutton"
            android:onClick="celebChosen"
            android:padding="10dp"
            android:tag="3"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="190dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/right" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="265dp"
            android:layout_marginStart="265dp"
            android:layout_marginTop="190dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/wrong" />


    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Guess the Footballer"
        android:textColor="#FFFFFF"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textSize="45sp"
        tools:ignore="HardcodedText,UnusedAttribute" />

    <RelativeLayout
        android:id="@+id/main2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <TextView
            android:id="@+id/scoreUpdatefinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="247dp"
            android:fontFamily="sans-serif"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/highscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:fontFamily="cursive"
            android:text="HighScore"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="500dp"
            android:background="@drawable/mybutton"
            android:text="Try Again"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:onClick="tryAgain"/>
    </RelativeLayout>


</RelativeLayout>